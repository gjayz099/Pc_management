<!-- Pages/Shared/_ErrorMessage.cshtml -->
@{
    string errorMessage = TempData[bl.refs.ErrorMessage] as string;

    if (!string.IsNullOrEmpty(errorMessage))
    {

        <div class="modal fade" id="ErrorShowModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header-error bg-danger m-0 p-0 ">
                    </div>
                    <div class="modal-body text-center">
                        <h6>@errorMessage</h6>
                    </div>
                    <div class="modal-footer py-0 pb-2">
                        <button type="button" class="btn btn-secondary" id="ErrorShowModalHide">Close</button>
                    </div>
                </div>
            </div>
        </div>

    }
}













