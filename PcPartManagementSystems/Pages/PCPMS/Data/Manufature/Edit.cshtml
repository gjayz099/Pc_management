@page "{Id?}"
@using System.Globalization
@model PcPartManagementSystems.Pages.PCPMS.Data.Manufature.EditModel

@section Topbar {
    <div class="py-2 me-3">
        <a href="/PCPMS/Data/Manufature" class="btn btn-secondary">Back</a>
        <button type="submit" form="editForm" class="btn btn-primary" asp-page-handler="SaveData">Save</button>
    </div>
}

<div class="row m-auto">
    <div class="card col-10 m-auto py-2">
        <form id="editForm" method="post" >
            <input asp-for="Id" hidden />
            <table class="table">
                <tbody>
                    <tr class="row">
                        <td class="form-group col-6">
                            <label asp-for="dto.ManufactureName" class="pb-1">Manufacture</label>
                            <input asp-for="dto.ManufactureName" class="form-control" />
                        </td>
                        <td class="form-group col-6">
                            <label asp-for="dto.CategotyID" class="pb-1">Category</label>
                            <select id="dropdownCategory" class="form-control" asp-for="dto.CategotyID"></select>
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="form-group col-6">
                            <label asp-for="dto.Specification" class="pb-1">Specification</label>
                            <input asp-for="dto.Specification" class="form-control" />
                        </td>
                        <td class="form-group col-6">
                            <label asp-for="dto.Stock" class="pb-1">Stock</label>
                            <input asp-for="dto.Stock" class="form-control" />
                        </td>
                    </tr>
                    <tr class="row">
                        <td class="form-group col-6">
                            <label asp-for="dto.Price" class="pb-1">Price</label>
                            <input asp-for="dto.Price" class="form-control text-end" value="@Model.dto?.Price.ToString("N2")" />
                        </td>
                        <td class="form-group col-6">
                            <label asp-for="dto.Description" class="pb-1">Description</label>
                            <input asp-for="dto.Description" class="form-control" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

      



@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            // Initialize Select2
            $("#dropdownCategory").select2({
                theme: 'bootstrap',
                placeholder: '--Select--'
            });

            var selectedValue = '@Model.dto?.CategotyID'; // Using null conditional operator


            console.log(selectedValue)

            setSelect2ID('/sel/?handler=AllCategory', '#dropdownCategory', selectedValue);
        
        });


      
       
    
    </script>
}


